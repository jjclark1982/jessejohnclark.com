{
  "source": "./contents",
  "clean": false,
  "metadata": {
    "title": "Jesse Clark’s Home Page",
    "author": "Jesse Clark",
    "site": {
      "title": "Jesse Clark’s Blog",
      "description": "Journals of the Expedition.",
      "url": "http://jessejohnclark.com",
      "author": "Jesse Clark"
    }
  },
  "plugins": {
    "../format-dates.js": {},
    "metalsmith-publish": {
      "draft": false,
      "private": false,
      "future": false,
      "futureMeta": "date"
    },
    "metalsmith-gravatar": {
      "Jesse Clark": "jjclark1982@gmail.com"
    },
    "metalsmith-metallic": {},
    "metalsmith-markdown": {},
    "metalsmith-more": {
      "ext": "html",
      "alwaysAddKey": true
    },
    "metalsmith-permalinks": {
      "pattern": ":collection/:title"
    },
    "metalsmith-collections": {
      "posts": {
        "pattern": "*.md",
        "sortBy": "date",
        "reverse": true
      },
      "widgets": {
        "pattern": "*.md"
      }
    },
    "metalsmith-pagination": {
      "collections.posts": {
        "perPage": 10,
        "template": "index.jade",
        "first": "index.html",
        "path": "posts/:num/index.html",
        "pageMetadata": {
          "title": "Jesse Clark’s Blog"
        }
      }
    },
    "metalsmith-templates": {
      "engine": "jade",
      "directory": "./templates"
    },
    "metalsmith-feed": {
      "collection": "posts"
    },
    "metalsmith-concat": {
      "files": "assets/*.css",
      "output": "assets/style.css"
      },
    "metalsmith-beautify": {
      "indent_size": 2,
      "indent_char": " "
    },
    "metalsmith-pdf": {
      "pattern": "jobs/jjclark-resume.html",
      "printMediaType": true,
      "pageSize": "letter"
    }
  }
}
