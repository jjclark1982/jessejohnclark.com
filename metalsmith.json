{
  "source": "./src",
  "destination": "./build",
  "clean": false,
  "metadata": {
    "author": "Jesse Clark",
    "site": {
      "title": "Jesse Clark’s Blog",
      "description": "Journals of the Expedition",
      "description": "The Disordering Incident",
      "description": "The Quality of the Light",
      "description": "Diamond Dust",
      "url": "http://jessejohnclark.com",
      "author": "Jesse Clark"
    }
  },
  "plugins": {
    "../format-dates.js": {},
    "metalsmith-publish": {
      "draft": false,
      "private": false,
      "future": false,
      "futureMeta": "date"
    },
    "metalsmith-gravatar": {
      "Jesse Clark": "gravatar@jessejohnclark.com"
    },
    "@metalsmith/markdown": {},
    "metalsmith-more": {
      "ext": "html",
      "alwaysAddKey": false
    },
    "@metalsmith/permalinks": {
      "duplicatesFail": false,
      "pattern": ":collection/:title",
      "relative": false,
      "date": "YYYY",
      "linksets": [
        {
          "match": { "collection": "posts" },
          "pattern": "posts/:date/:title"
        }
      ]
    },
    "@metalsmith/collections": {
      "posts": {
        "pattern": "*.md",
        "sortBy": "date",
        "reverse": true
      },
      "widgets": {
        "pattern": "*.md"
      }
    },
    "metalsmith-pagination": {
      "collections.posts": {
        "perPage": 10,
        "layout": "index.jade",
        "first": "index.html",
        "path": "posts/:num/index.html",
        "pageMetadata": {
          "title": "Jesse Clark’s Blog"
        }
      }
    },
    "@metalsmith/layouts": {
      "directory": "layouts",
      "default": "page.jade",
      "pattern": "**/*.html",
      "suppressNoFilesError": true,
      "engineOptions": {
        "pretty": true
      }
    },
    "@metalsmith/in-place": {
      "suppressNoFilesError": true,
      "directory": "layouts",
      "pattern": "contents/**/*",
      "setFilename": true,
      "engineOptions": {
        "cache": false,
        "pretty": true
      }
    },
    "metalsmith-metallic": {},
    "metalsmith-feed": {
      "collection": "posts"
    },
    "metalsmith-pdf": {
      "pattern": "jobs/jjclark-resume.html",
      "printMediaType": true,
      "pageSize": "letter"
    }
  }
}
