{
  "source": "./contents",
  "clean": false,
  "metadata": {
    "title": "Jesse Clark's Home Page",
    "site": {
      "title": "Jesse Clark's Blog",
      "description": "Journals of the Expedition.",
      "url": "http://jessejohnclark.com",
      "author": "Jesse Clark"
    }
  },
  "plugins": {
    "metalsmith-drafts": {},
    "metalsmith-gravatar": {
      "Jesse Clark": "jjclark1982@gmail.com"
    },
    "metalsmith-more": {
      "ext": "md",
      "alwaysAddKey": false
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":collection/:title"
    },
    "metalsmith-collections": {
      "posts": {
        "pattern": "*.md",
        "sortBy": "date",
        "reverse": true
      },
      "widgets": {
        "pattern": "*.md"
      }
    },
    "metalsmith-templates": {
      "engine": "jade",
      "directory": "./templates"
    },
    "metalsmith-feed": {
      "collection": "posts"
    },
    "metalsmith-beautify": {
      "indent_size": 2,
      "indent_char": " "
    }
  }
}
