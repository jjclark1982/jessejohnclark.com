doctype html
html
  head
    title= title + " | " + site.title
    link(rel='stylesheet', href='/assets/normalize.css')
    link(rel='stylesheet', href='/assets/hljs-github.css')
    link(rel='stylesheet', href='/assets/style.css')
    if (customScript)
        script!= customScript
  body
    .container
        header
            h1
                a(href="/")= site.title

        article
            header
                h2
                    a(href="/"+path)= title
                .author| by 
                    span.author-name= author
                    //- img(src=gravatar[author])
                .time| Published 
                    time.published(datetime=date)= formatDate(date, "LL")
                if (editDate)
                    .time| Last edited 
                        time.modified(datetime=editDate)= formatDate(editDate, "LLL")

            != contents

        nav
            each widget in collections.widgets
                .widget!= widget.contents
